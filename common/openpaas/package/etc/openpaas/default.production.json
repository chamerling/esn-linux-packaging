{
  "app": {
    "name": "Linagora ESN"
  },
  "webserver": {
    "enabled": true,
    "debugPort": 8081,
    "ip": "127.0.0.1",
    "ipv6": "",
    "port": 8080,
    "ssl_ip": "",
    "ssl_ipv6": "",
    "virtualhosts": [],
    "startupBufferTimeout": 5000
  },
  "wsserver": {
    "enabled": true,
    "port": 8080
  },
  "log": {
    "file": {
      "enabled": false
    },
    "rotate": {
      "enabled": true,
      "file": "/var/log/openpaas/application.log",
      "level": "info",
      "handleExceptions": true,
      "json": false,
      "prettyPrint": true,
      "colorize": false,
      "size": "10m",
      "skip": 5
    },
    "console": {
      "enabled": false
    }
  },
  "auth": {
    "strategies": ["mongo", "bearer"]
  },
  "db": {
    "reconnectOnConfigurationChange": true,
    "forceReconnectOnDisconnect": true,
    "attemptsLimit": 100
  }
}
